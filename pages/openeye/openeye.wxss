/* pages/openeye/openeye.wxss */

scroll-view {
  height: 100%;
  background: skyblue;
}

.view-style {
  width: 100%;
  height: 400rpx;
  border-bottom: 1rpx solid white;
  /* 指定弹性布局 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;

}

.view-style text:nth-of-type(1){
  font-size:40rpx;
}

.view-style text:nth-of-type(2){
  font-size:32rpx;
  margin: 20rpx 0rpx;
}

.view-style image{
  width: 100rpx;
  height:100rpx;
}